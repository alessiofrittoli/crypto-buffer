{
	"name": "@alessiofrittoli/crypto-buffer",
	"version": "0.1.0",
	"description": "Lightweight TypeScript Node.js Buffers utility library",
	"author": {
		"name": "Alessio Frittoli",
		"email": "info@alessiofrittoli.it",
		"url": "https://alessiofrittoli.it"
	},
	"license": "MIT",
	"keywords": [
		"nodejs",
		"buffers"
	],
	"homepage": "https://github.com/alessiofrittoli/crypto-buffer#readme",
	"bugs": {
		"url": "https://github.com/alessiofrittoli/crypto-buffer/issues",
		"email": "info@alessiofrittoli.it"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alessiofrittoli/crypto-buffer.git"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./toDataView": {
			"types": "./dist/toDataView.d.ts",
			"import": "./dist/toDataView.mjs",
			"require": "./dist/toDataView.js"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "eslint && jest --ci --verbose && tsup",
		"lint": "eslint",
		"test": "jest --watchAll --verbose",
		"test:ci": "jest --ci --verbose",
		"test:jest": "pnpm test jest.test.ts",
		"test:todataview": "pnpm test todataview.test.ts",
		"test:todataview:jsdom": "JSDOM=true pnpm test:todataview"
	},
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.1",
		"dotenv": "^16.4.5",
		"eslint": "^9.16.0",
		"globals": "^15.12.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	}
}
