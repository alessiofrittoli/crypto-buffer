{
	"name": "@alessiofrittoli/crypto-buffer",
	"version": "2.0.1",
	"description": "Lightweight TypeScript Node.js Buffers utility library",
	"author": {
		"name": "Alessio Frittoli",
		"email": "info@alessiofrittoli.it",
		"url": "https://alessiofrittoli.it"
	},
	"license": "MIT",
	"keywords": [
		"nodejs",
		"buffers"
	],
	"homepage": "https://github.com/alessiofrittoli/crypto-buffer#readme",
	"bugs": {
		"url": "https://github.com/alessiofrittoli/crypto-buffer/issues",
		"email": "info@alessiofrittoli.it"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alessiofrittoli/crypto-buffer.git"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./toDataView": {
			"types": "./dist/toDataView.d.ts",
			"import": "./dist/toDataView.mjs",
			"require": "./dist/toDataView.js"
		},
		"./coercion": {
			"types": "./dist/coercion/index.d.ts",
			"import": "./dist/coercion/index.mjs",
			"require": "./dist/coercion/index.js"
		},
		"./common": {
			"types": "./dist/common/index.d.ts",
			"import": "./dist/common/index.mjs",
			"require": "./dist/common/index.js"
		},
		"./conversion": {
			"types": "./dist/conversion/index.d.ts",
			"import": "./dist/conversion/index.mjs",
			"require": "./dist/conversion/index.js"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "pnpm lint && pnpm test:ci && pnpm test:ci:jsdom && tsup",
		"build:watch": "tsup --watch",
		"lint": "eslint",
		"test": "pnpm test:watch",
		"test:watch": "jest --watchAll --verbose",
		"test:jsdom": "JSDOM=true pnpm test:watch",
		"test:ci": "jest --ci --verbose",
		"test:ci:jsdom": "JSDOM=true pnpm test:ci",
		"test:coverage": "pnpm test:watch --coverage",
		"test:ci:coverage": "pnpm test:ci --coverage",
		"test:serve-coverage": "http-server ./coverage/lcov-report --gzip true -p 0 -o --silent",
		"test:coverage:serve": "concurrently --prefix none --kill-others \"pnpm test:coverage\" \"pnpm test:serve-coverage\"",
		"test:coverage:jsdom": "JSDOM=true pnpm test:coverage",
		"test:coverage:jsdom:serve": "JSDOM=true pnpm test:coverage:serve",
		"test:jest": "pnpm test:watch jest.test.ts",
		"test:jest:jsdom": "JSDOM=true pnpm test:jest",
		"test:coercion": "pnpm test coercion.test.ts",
		"test:coercion:jsdom": "JSDOM=true pnpm test:coercion",
		"test:common": "pnpm test common.test.ts",
		"test:common:jsdom": "JSDOM=true pnpm test:common",
		"test:conversion": "pnpm test conversion.test.ts",
		"test:conversion:jsdom": "JSDOM=true pnpm test:conversion",
		"test:todataview": "pnpm test todataview.test.ts",
		"test:todataview:jsdom": "JSDOM=true pnpm test:todataview"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"concurrently": "^9.1.1",
		"dotenv": "^16.4.7",
		"eslint": "^9.17.0",
		"globals": "^15.14.0",
		"http-server": "^14.1.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2"
	}
}
